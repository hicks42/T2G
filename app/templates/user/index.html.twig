{% extends 'base.html.twig' %}

{% block title %}Hello UserController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		{% if events|length > 0 %}
			<h1 class="mb-4 text-center text-muted">{{ pluralize(events|length, 'Event') }}</h1>

			{% for row in events|batch(3) %}
				<div class="row mb-5">
					{% for event in row %}
						<div class="col-md-4">
							<article class="event bg-white rounded shadow">
								<div class="mw-100 rounded-top overflow-hidden">
									<a href="{{ path('app_events_show', {id: event.id}) }}">{{ event.name }}
									</a>
								</div>
								<h2 class="h5 pl-3 pt-3">
									<a href="{{ path('app_events_show', {id: event.id}) }}" class="text-secondary text-decoration-none">{{ event.name }}</a>
								</h2>
								<p class="pl-3 pb-3 text-muted"></p>
							</article>
						</div>
					{% endfor %}
				</div>
			{% endfor %}
		{% else %}
			<p class="mt-5 h1 text-center">No event yet.
				<a href="{{ path('app_events_new') }}">Be the first!</a>
			</p>
		{% endif %}
	</div>
{% endblock %}
